// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id       String    @id @default(uuid())
  name     String
  fk_roles roles     @relation(fields: [role], references: [id])
  role     String
  password String
  email    String
  roadmap  roadmap[]
}

model roles {
  id          String  @id @default(uuid())
  description String
  users       users[]
}

model risk {
  id          String    @id @default(uuid())
  description String
  roadmap     roadmap[]
}

model roadmap {
  id                 String         @id @default(uuid())
  title              String
  descricao          String
  orcamento_proposto Float
  file               String
  produtora          users          @relation(fields: [fk_produtora], references: [id])
  fk_produtora       String
  risk               risk           @relation(fields: [fk_risk], references: [id])
  fk_risk            String
  homologation       homologation[]
}

model status {
  id           String         @id @default(uuid())
  description  String
  homologation homologation[]
}

model homologation {
  id         String  @id @default(uuid())
  roadmap    roadmap @relation(fields: [fk_roadmap], references: [id])
  fk_roadmap String
  status     status  @relation(fields: [fk_status], references: [id])
  fk_status  String
  parecer    String
}
